<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222"
    tools:context=".MainMenuActivity">

    <ImageView
        android:id="@+id/main_image"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/generic"
        android:contentDescription="Mountains" />

    <Button
        android:id="@+id/bmw_start_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_image"
        android:layout_centerInParent="true"
        android:layout_marginTop="40sp"
        android:onClick="BMWOnClick"
        android:text="BMW" />

    <Button
        android:id="@+id/vw_start_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bmw_start_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:onClick="VWOnClick"
        android:text="VOLKSWAGEN" />

    <Button
        android:id="@+id/generic_start_button"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vw_start_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:onClick="GenericOnClick"
        android:text="Generic" />
</RelativeLayout>